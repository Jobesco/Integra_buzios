# Building app
FROM node:18-alpine AS builder

WORKDIR /app
COPY package*.json ./
RUN npm ci


FROM node:18-alpine AS final

WORKDIR /app

ENV PATH="/app/node_modules/.bin:$PATH"

COPY --from=builder /app/node_modules /app/node_modules
COPY . .
# RUN npm run build

ENV HOSTNAME="0.0.0.0"
ENV PORT=3015

ENTRYPOINT [ "npm", "run", "dev" ]